<%-include ../partials/header.ejs%>
<%-include ../partials/main_nav.ejs%>
<!--Content for the Edit Page-->
<div class="bg-light-gray padding-100px-top" style="min-height:500px;">
    <div class="container">
      <div class="row" style="height: 100%;">
        <div class="offset-md-12 col-md-12">
            <h1 class="font-weight middle">Edit Business Contacts</h1>
            <form class="form" style="margin-bottom: 100px;" method="POST">
                <div class="form-group row"> 
                    <div class="col-sm-6">
                        <label for="nameTextField" >Contact Name</label>
                        <input type="text" class="form-control"
                        id="nameTextField"
                        placeholder = "Enter the Business Contact's name"
                        name="name" 
                        value="<%=business_contacts.name%>"
                        required>
                    </div>
                    
                    
                    <div class="col-sm-6">
                        <label for="numberTextField">Number</label>
                        <input type="number" class="form-control"
                        id="numberTextField"
                        placeholder = "Enter the Business Contact's number"
                        name="number"
                        value="<%=business_contacts.number%>"
                        required>
                    </div>
                    
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label for="emailTextField">Email</label>
                        <input type="text" class="form-control"
                        id="emailTextField"
                        placeholder = "Enter the Business Contact's email"
                        name="email" 
                        value="<%=business_contacts.email%>"
                        required>
                    </div>
                </div>
                <br>
                <div class="form-group row"> 
                    <button class="btn" style= "color:rgb(223, 167, 99)" type="submit"><i class="fas fa-edit"></i> Submit</button>
                   
                    <a href="/business_contactsList" class="btn btn-warning" style= "margin-left: 15px;"><i class="fas fa-undo"></i> Cancel</a>
                </div>  
            </form>
           </div>
        </div>
    </div>
</div>



 <%-include ../partials/bottom_nav.ejs%>
