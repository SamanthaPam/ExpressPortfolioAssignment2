<%-include ../partials/header.ejs%>
<%-include ../partials/main_nav.ejs%>
<div class="bg-light-gray padding-100px-top">
    <main class="container" style="height: 500px">
    <!--message Area-->
    <%if(messages.length>0){%>
        <div class="alert alert-danger">
            <%=messages%>
            </div>
            <%}%>
            <div class="row" style="height: 100%";>
                <div class="offset md-6 col-md-12">
                    <!--Title of the page-->
                    <h1 class="font-weight middle">Please login</h1>
                    <form method="POST" autocomplete = "off">
                        <fieldset class="form-group">
                            <label for="username">Type your username:</label>
                            <input type="text" class="form-control"
                            name="username"
                            placeholder = "Enter username"
                            id="username" required autofocus>
                            </fieldset>

                            <fieldset class="form-group">
                            <label for="password">Type your password:</label>
                            <input type="password" class="form-control"
                            name="password"
                            placeholder = "Enter password"
                            id="password" required>
                            <br>
                            Are you a new user? <a href="/register" style= "color: rgb(223, 167, 99)">Register Here</a>
                            </fieldset>
                            <br>

                            <fieldset class="form-group text-right">
                            <input type="submit" class="btn btn-success" value="Login">
                            <a href="/"><input type="button" class="btn btn-warning" value="Cancel"></a>
                            </fieldset>
                        </form>
                    </div>
                </div>
    </main>
</div>


<%-include ../partials/bottom_nav.ejs%>
 <%-include ../partials/footer.ejs%>